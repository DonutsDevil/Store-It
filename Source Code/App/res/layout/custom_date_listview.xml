<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingStart="16dp"
    android:paddingTop="4dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="#D7000000"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="20sp"
        android:text="March 2020"
        android:gravity="center"
        android:textColor="#F4FF81"
        android:fontFamily="@font/fredoka_one"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="13"
        android:textColor="@color/design_default_color_on_secondary"
        android:textStyle="bold"
        android:background="@drawable/date_circle"
        android:textAppearance="?android:textAppearanceMedium"/>
    <LinearLayout
        android:paddingStart="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="14dp"
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gudea_bold"
        android:paddingStart="6dp"
        android:text="Kurti"
        android:gravity="center"
        android:textColor="@color/white"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swapnil Padaya"
        android:textColor="@color/white"
        android:fontFamily="@font/gudea"
        android:textAppearance="?android:textAppearanceSmall"
        android:paddingStart="6dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>