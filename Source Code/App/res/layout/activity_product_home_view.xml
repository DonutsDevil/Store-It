<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".ProductHomeView">

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/appbar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <com.google.android.material.appbar.CollapsingToolbarLayout
           android:id="@+id/collapseActionView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:background="#000000"
           app:contentScrim="#316101"
           app:title="Swapnil Padaya"
           app:layout_scrollFlags="scroll|snapMargins|exitUntilCollapsed"
           app:expandedTitleTextAppearance="@style/expandedBarTestStyle">

           <RelativeLayout
               android:id="@+id/relative_layout"
               app:layout_collapseMode="parallax"
               android:layout_width="match_parent"
               android:layout_height="325dp">
           <LinearLayout
               android:id="@+id/linear_layout"
               android:layout_width="match_parent"
               android:layout_height="305dp"
               android:background="@drawable/custom_appbar_background"
               android:paddingHorizontal="20dp"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/tv_mainText_Name_Location"
                   android:layout_marginTop="63dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   tools:text="Swapnil Padaya Profile\nResiding in Chembur ..."
                   android:textColor="#FFFFFF"
                   android:textSize="25sp"
                   android:textStyle="bold"/>

               <TextView
                   android:id="@+id/tv_subMain_profit_location"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textAlignment="textEnd"
                   tools:text="Total orders 4\nand\nProfit made Rs.400"
                   android:textColor="#DCE5E6E2"
                   android:textSize="20sp"
                   android:textStyle="bold"/>
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/et_search"
                   android:layout_marginTop="10dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:hint="Search for a Product..."
                   android:textColorHint="#BAB6B6"
                   android:paddingStart="20dp"
                   android:elevation="5dp"
                   android:textColor="#BAB6B6"
                   android:paddingEnd="10dp"
                   android:background="@drawable/searchbar_background"/>
                   <ImageView
                       android:id="@+id/Image_btnSearch"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:src="@drawable/search_btn"
                       android:layout_toEndOf="@id/et_search"
                       android:layout_marginStart="-55dp"
                       android:layout_marginTop="12dp"
                       android:background="?attr/selectableItemBackgroundBorderless"
                       android:elevation="8dp"/>
               </RelativeLayout>
           </LinearLayout>
               <com.google.android.material.floatingactionbutton.FloatingActionButton
                  android:id="@+id/add_new_product_homeView"
                   android:src="@drawable/add_single_cloth"
                   android:layout_width="wrap_content"
                   app:maxImageSize="30dp"

                   android:layout_alignParentBottom="true"
                   android:layout_height="wrap_content"
                   app:pressedTranslationZ="12dp"
                   android:layout_marginStart="27dp"/>
           </RelativeLayout>

           <androidx.appcompat.widget.Toolbar
               android:id="@+id/toolbar"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               android:background="#316101"
               app:layout_collapseMode="pin"
               app:titleTextColor="#FFFFFF">
           </androidx.appcompat.widget.Toolbar>
       </com.google.android.material.appbar.CollapsingToolbarLayout>
   </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <RelativeLayout
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ListView
        android:paddingTop="5dp"
        android:id="@+id/listView_user"
        android:divider="@android:color/transparent"
        android:nestedScrollingEnabled="true"
        android:dividerHeight="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:scrollbarSize="10dp"
        android:scrollingCache="false"
        android:animationCache="false"
        android:smoothScrollbar="false"
        android:scrollbarThumbVertical="@drawable/custom_scrollbar"/>
    <ImageView
        android:padding="20dp"
        android:src="@drawable/no_data"
        android:elevation="80dp"
        android:id="@+id/no_product_image"
        android:layout_width="match_parent"
        android:focusable="false"
        android:clickable="false"
        android:visibility="gone"
        android:scaleType="fitCenter"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>